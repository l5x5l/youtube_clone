<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/background_color"
    android:background="@android:color/transparent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="test"
                android:theme="@style/Toolbar"
                android:background="@color/background_color"
                app:titleTextColor="@color/white"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_color"
                android:scrollbars="none">
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:layout_marginStart="6dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/chip_text_state"
                        app:chipBackgroundColor="@color/chip_state"
                        android:checked="true"
                        android:text="전체"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/chip_text_state"
                        app:chipBackgroundColor="@color/chip_state"
                        android:text="요리 프로그램"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/chip_text_state"
                        app:chipBackgroundColor="@color/chip_state"
                        android:text="만화 영화"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/chip_text_state"
                        app:chipBackgroundColor="@color/chip_state"
                        android:text="공예"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/chip_text_state"
                        app:chipBackgroundColor="@color/chip_state"
                        android:text="수학"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/chip_text_state"
                        app:chipBackgroundColor="@color/chip_state"
                        android:text="피트니스"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_marginEnd="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/chip_text_state"
                        app:chipBackgroundColor="@color/chip_state"
                        android:text="축구"/>

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color"/>

            <LinearLayout
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/original"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/original_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_outline_movie_24"
                        android:tint="@color/white"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Originals"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@id/original_icon"
                        app:layout_constraintTop_toTopOf="@id/original_icon"
                        app:layout_constraintBottom_toBottomOf="@id/original_icon"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/youtube_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/youtube_music_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/youtubemusic" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music app"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@id/youtube_music_icon"
                        app:layout_constraintTop_toTopOf="@id/youtube_music_icon"
                        app:layout_constraintBottom_toBottomOf="@id/youtube_music_icon"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/border_color"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ani_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/thumbnail1"
                    android:scaleType="fitCenter"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/black"
                    android:src="@drawable/ani_thumbnail"/>

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progress1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintStart_toStartOf="@id/thumbnail1"
                    app:layout_constraintEnd_toEndOf="@id/thumbnail1"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail1"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="50dp"
                    android:id="@+id/profile1"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progress1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/profile1_src"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progress1"
                        android:src="@drawable/user_keke"/>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/video_title1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/profile1"
                    app:layout_constraintEnd_toStartOf="@id/more1"
                    app:layout_constraintTop_toTopOf="@id/profile1"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Amitie - Animation"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/more1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="@id/profile1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_more"
                    android:tint="@color/white" />

                <LinearLayout
                    android:id="@+id/video_subtitle_layout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintStart_toStartOf="@id/video_title1"
                    app:layout_constraintEnd_toEndOf="@id/video_title1"
                    app:layout_constraintTop_toBottomOf="@id/video_title1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/user_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kekeflipnote"
                        android:textColor="@color/subtext_color"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" \u00b7 "
                        android:textColor="@color/subtext_color"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/video_subtext1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조회수 49만회 \u00b7 4년 전"
                        android:textColor="@color/subtext_color"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/thumbnail2"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:background="@color/black"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_thumbnail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progress2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    app:layout_constraintStart_toStartOf="@id/thumbnail2"
                    app:layout_constraintEnd_toEndOf="@id/thumbnail2"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail2"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="50dp"
                    android:id="@+id/profile2"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progress2">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/profile2_src"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progress2"
                        android:src="@drawable/user_pate"/>

                </androidx.cardview.widget.CardView>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/video_title2"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/profile2"
                    app:layout_constraintEnd_toStartOf="@id/more2"
                    app:layout_constraintTop_toTopOf="@id/profile2"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="당신이 만족하는 모션로고를 디자인해드립니다. w/블루샤크"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/more2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="@id/profile2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_more"
                    android:tint="@color/white" />

                <LinearLayout
                    android:id="@+id/video_subtitle_layout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintStart_toStartOf="@id/video_title2"
                    app:layout_constraintEnd_toEndOf="@id/video_title2"
                    app:layout_constraintTop_toBottomOf="@id/video_title2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/user_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="파테슘"
                        android:textColor="@color/subtext_color"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" \u00b7 "
                        android:textColor="@color/subtext_color"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/video_subtext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조회수 5.7만회 \u00b7 2년 전"
                        android:textColor="@color/subtext_color"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ani_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/thumbnail3"
                    android:scaleType="fitCenter"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/black"
                    android:src="@drawable/ani_thumbnail"/>

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progress3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintStart_toStartOf="@id/thumbnail3"
                    app:layout_constraintEnd_toEndOf="@id/thumbnail3"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail3"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="50dp"
                    android:id="@+id/profile3"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progress3">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/profile3_src"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progress1"
                        android:src="@drawable/user_keke"/>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/video_title3"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/profile3"
                    app:layout_constraintEnd_toStartOf="@id/more3"
                    app:layout_constraintTop_toTopOf="@id/profile3"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Amitie - Animation"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/more3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="@id/profile3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_more"
                    android:tint="@color/white" />

                <LinearLayout
                    android:id="@+id/video_subtitle_layout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintStart_toStartOf="@id/video_title3"
                    app:layout_constraintEnd_toEndOf="@id/video_title3"
                    app:layout_constraintTop_toBottomOf="@id/video_title3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/user_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kekeflipnote"
                        android:textColor="@color/subtext_color"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" \u00b7 "
                        android:textColor="@color/subtext_color"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/video_subtext3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조회수 49만회 \u00b7 4년 전"
                        android:textColor="@color/subtext_color"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>