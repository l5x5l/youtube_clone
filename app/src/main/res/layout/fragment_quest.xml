<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/background_color"
    android:background="@android:color/transparent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="test"
            app:menu="@menu/appbar_menu"
            android:theme="@style/Toolbar"
            android:background="@color/background_color"
            app:titleTextColor="@color/white"

            app:layout_scrollFlags="scroll|enterAlways|snap"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_recycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:id="@+id/line1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_recycler"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/border_color"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/realtime_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1"
                android:layout_margin="12dp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:textSize="18dp"
                android:text="인기 급상승 동영상"
                android:textColor="@color/white"/>

            <View
                android:id="@+id/line2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/realtime_title"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/documentary_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/thumbnail1"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/black"
                    android:src="@drawable/pirates_thumbnail"/>

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progress1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintStart_toStartOf="@id/thumbnail1"
                    app:layout_constraintEnd_toEndOf="@id/thumbnail1"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail1"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="50dp"
                    android:id="@+id/profile1"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progress1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/profile1_src"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progress1"
                        android:src="@drawable/user_pirates"/>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/video_title1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/profile1"
                    app:layout_constraintEnd_toStartOf="@id/more1"
                    app:layout_constraintTop_toTopOf="@id/profile1"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="실수로 아메리카 발견함;;; / 대항새비대를 연 콜롬버스"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/more1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="@id/profile1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_more"
                    android:tint="@color/white" />

                <LinearLayout
                    android:id="@+id/video_subtitle_layout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintStart_toStartOf="@id/video_title1"
                    app:layout_constraintEnd_toEndOf="@id/video_title1"
                    app:layout_constraintTop_toBottomOf="@id/video_title1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/user_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지식해적단"
                        android:textColor="@color/subtext_color"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" \u00b7 "
                        android:textColor="@color/subtext_color"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/video_subtext1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조회수 15만회 \u00b7 1주 전"
                        android:textColor="@color/subtext_color"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/game_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/documentary_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/thumbnail2"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/black"
                    android:src="@drawable/lck_thumbnail"/>

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progress2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintStart_toStartOf="@id/thumbnail2"
                    app:layout_constraintEnd_toEndOf="@id/thumbnail2"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail2"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="50dp"
                    android:id="@+id/profile2"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progress2">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/profile2_src"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progress1"
                        android:src="@drawable/user_lck"/>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/video_title2"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/profile2"
                    app:layout_constraintEnd_toStartOf="@id/more2"
                    app:layout_constraintTop_toTopOf="@id/profile2"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="KT vs 프레딧 | 매치 47 하이라이트 | 7.10 | 2021 LCK 서머 스플릿"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/more2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="@id/profile2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_more"
                    android:tint="@color/white" />

                <LinearLayout
                    android:id="@+id/video_subtitle_layout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintStart_toStartOf="@id/video_title2"
                    app:layout_constraintEnd_toEndOf="@id/video_title2"
                    app:layout_constraintTop_toBottomOf="@id/video_title2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/user_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LCK"
                        android:textColor="@color/subtext_color"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" \u00b7 "
                        android:textColor="@color/subtext_color"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/video_subtext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조회수 4천회 \u00b7 2시간 전"
                        android:textColor="@color/subtext_color"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>